{% extends 'base.html.twig' %}

{% block title %}Abonne index{% endblock %}

{% block body %}
    <h1>Abonne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Rôles</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonne in abonnes %}
            <tr>
                <td>{{ abonne.id }}</td>
                <td>{{ abonne.pseudo }}</td>
                <td>
                    {% for role in abonne.roles %}
                        {% if role == "ROLE_ADMIN" %}
                            Directeur
                        {% elseif role == "ROLE_BIBLIOTHECAIRE" %}
                            Bibliothécaire
                        {% elseif role == "ROLE_USER" %}
                            Abonné
                        {% elseif role == "ROLE_LECTEUR" %}
                            Lecteur
                        {% else %}
                            Autre
                        {% endif %}
                    {% endfor %}
                </td>
                <td>{{ abonne.prenom }}</td>
                <td>{{ abonne.nom }}</td>
                <td>
                    <a href="{{ path('abonne_show', {'id': abonne.id}) }}">show</a>
                    <a href="{{ path('abonne_edit', {'id': abonne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('abonne_new') }}">Create new</a>
{% endblock %}
